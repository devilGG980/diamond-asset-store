import React, { useState, useEffect } from 'react';
import { useParams, Link, useNavigate } from 'react-router-dom';
import { LazyLoadImage } from 'react-lazy-load-image-component';
import 'react-lazy-load-image-component/src/effects/blur.css';
import { motion } from 'framer-motion';
import {
  ArrowLeftIcon,
  ClockIcon,
  TagIcon,
  EyeIcon,
  HeartIcon,
  ShareIcon,
  CalendarIcon,
  UserIcon,
  BookOpenIcon
} from '@heroicons/react/24/outline';
import { HeartIcon as HeartIconSolid } from '@heroicons/react/24/solid';
import PageSEO from '../components/SEO/PageSEO';
import MarkdownRenderer from '../components/MarkdownRenderer';
import TableOfContents from '../components/TableOfContents';
import toast from 'react-hot-toast';
import { blogPosts, FullBlogPost as BlogPostType } from '../data/blogPosts';
import { mockAssets } from '../data/assets';
import { getRecommendedAssetsForPost, shouldPromoteThumbnailEditor } from '../utils/recommendationUtils';
import NativeBannerAd from '../components/ads/NativeBannerAd';

const BlogPost: React.FC = () => {
  const { id } = useParams<{ id: string }>();
  const navigate = useNavigate();
  const [post, setPost] = useState<BlogPostType | null>(null);
  const [liked, setLiked] = useState(false);
  const [relatedPosts, setRelatedPosts] = useState<BlogPostType[]>([]);

  useEffect(() => {
    // Check if we need to scroll to top (always do on mount/id change)
    window.scrollTo(0, 0);

    if (id) {
      const foundPost = blogPosts.find(p => p.id === id);
      if (foundPost) {
        setPost(foundPost);
        // Get related posts from same category
        const related = blogPosts
          .filter(p => p.category === foundPost.category && p.id !== foundPost.id)
          .slice(0, 3);
        setRelatedPosts(related);
      } else {
        navigate('/blog');
      }
    }
  }, [id, navigate]);



  const handleLike = () => {
    if (post) {
      setLiked(!liked);
      toast.success(liked ? 'Removed from favorites' : 'Added to favorites!');
    }
  };

  const handleShare = () => {
    if (navigator.share && post) {
      navigator.share({
        title: post.title,
        text: post.excerpt,
        url: window.location.href,
      });
    } else {
      navigator.clipboard.writeText(window.location.href);
      toast.success('Link copied to clipboard!');
    }
  };

  const getDifficultyColor = (difficulty: string | undefined) => {
    switch (difficulty) {
      case 'Beginner': return 'bg-green-500';
      case 'Intermediate': return 'bg-yellow-500';
      case 'Advanced': return 'bg-red-500';
      default: return 'bg-gray-500';
    }
  };

  if (!post) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-gray-900 via-black to-gray-900 flex items-center justify-center">
        <div className="text-center">
          <div className="animate-spin rounded-full h-16 w-16 border-b-2 border-cyan-500 mx-auto mb-4"></div>
          <p className="text-white text-lg">Loading blog post...</p>
        </div>
      </div>
    );
  }

  return (
    <>
      <PageSEO
        pageType="article"
        title={post.title}
        description={post.excerpt}
        keywords={post.tags}
        structuredData={{
          "@context": "https://schema.org",
          "@type": "BlogPosting",
          "headline": post.title,
          "image": post.image ? [post.image] : [],
          "datePublished": post.publishDate,
          "dateModified": post.publishDate,
          "author": [{
            "@type": "Person",
            "name": post.author || "EditorVault Team",
            "url": "https://editorvault.web.app/"
          }],
          "publisher": {
            "@type": "Organization",
            "name": "EditorVault",
            "logo": {
              "@type": "ImageObject",
              "url": "https://editorvault.web.app/logo512.png"
            }
          },
          "description": post.excerpt,
          "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": window.location.href
          },
          "articleSection": post.category,
          "keywords": post.tags.join(", "),
          "wordCount": post.content ? post.content.split(/\s+/).length : 0,
          "isAccessibleForFree": true,
          "speakable": {
            "@type": "SpeakableSpecification",
            "cssSelector": ["h1", ".blog-excerpt"]
          },
          "inLanguage": "en-US"
        }}
        breadcrumbs={[
          { name: 'Home', url: '/' },
          { name: 'Blog', url: '/blog' },
          { name: post.title, url: `/blog/${post.id}` }
        ]}
      />

      <article className="min-h-screen bg-gradient-to-br from-gray-900 via-black to-gray-900">
        <div className="max-w-4xl mx-auto px-4 py-8 sm:px-6 lg:px-8">

          {/* Back Button */}
          <motion.div
            initial={{ opacity: 0, x: -20 }}
            animate={{ opacity: 1, x: 0 }}
            className="mb-8"
          >
            <Link
              to="/blog"
              className="inline-flex items-center text-cyan-400 hover:text-cyan-300 transition-colors"
            >
              <ArrowLeftIcon className="h-5 w-5 mr-2" />
              Back to Blog
            </Link>
          </motion.div>

          {/* Article Header */}
          <motion.header
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            className="mb-12"
          >
            <div className="flex flex-wrap items-center gap-3 mb-6">
              <span className="bg-gradient-to-r from-purple-600 to-cyan-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                {post.category}
              </span>
              {post.difficulty && (
                <span className={`${getDifficultyColor(post.difficulty)} text-white px-3 py-1 rounded-full text-sm font-semibold`}>
                  {post.difficulty}
                </span>
              )}
            </div>

            <h1 className="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6 leading-tight">
              {post.title}
            </h1>

            <p className="text-xl text-gray-300 mb-8 leading-relaxed">
              {post.excerpt}
            </p>

            {/* Hero Image */}
            <div className="aspect-video w-full rounded-xl overflow-hidden mb-8 bg-gray-800 relative shadow-2xl">
              {post.image ? (
                <div className="w-full h-full">
                  <LazyLoadImage
                    src={post.image}
                    alt={`${post.title} - ${post.tags[0] || post.category} guide`}
                    effect="blur"
                    wrapperClassName="w-full h-full"
                    className="w-full h-full object-cover"
                    width="100%"
                    height="100%"
                  />
                </div>
              ) : (
                <div className="w-full h-full flex items-center justify-center text-8xl">
                  {post.thumbnail || 'üìù'}
                </div>
              )}
            </div>

            {/* Meta Information */}
            <div className="flex flex-wrap items-center gap-6 text-gray-400 mb-8">
              <div className="flex items-center">
                <UserIcon className="h-5 w-5 mr-2" />
                <span>{post.author || 'EditorVault Team'}</span>
              </div>
              <div className="flex flex-col gap-1">
                <div className="flex items-center">
                  <CalendarIcon className="h-5 w-5 mr-2" />
                  <time>Published {new Date(post.publishDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}</time>
                </div>
                <div className="text-sm text-gray-500 ml-7">
                  Last updated {new Date(post.publishDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                  })}
                </div>
              </div>
              <div className="flex items-center">
                <ClockIcon className="h-5 w-5 mr-2" />
                <span>{post.readTime} min read</span>
              </div>
              {post.views && (
                <div className="flex items-center">
                  <EyeIcon className="h-5 w-5 mr-2" />
                  <span>{post.views.toLocaleString()} views</span>
                </div>
              )}
            </div>
          </motion.header>

          {/* Article Content */}
          Watch Video
        </motion.a>
          )}
      </div>
    </motion.header >

      {/* Article Content */ }
      < motion.div
  initial = {{ opacity: 0 }
}
animate = {{ opacity: 1 }}
transition = {{ delay: 0.3 }}
className = "mb-12"
  >
  {/* Native Banner Ad Container */ }
  < NativeBannerAd className = "mb-12" />

    {/* Table of Contents */ }
    < TableOfContents content = { post.content } />

      <MarkdownRenderer content={post.content} />
      </motion.div >

  {/* Tags */ }
  < motion.div
initial = {{ opacity: 0, y: 20 }}
animate = {{ opacity: 1, y: 0 }}
transition = {{ delay: 0.4 }}
className = "mb-12"
  >
        <h3 className="text-lg font-bold text-white mb-4">Tags</h3>
        <div className="flex flex-wrap gap-2">
          {post.tags.map((tag) => (
            <span
              key={tag}
              className="bg-gray-800 text-gray-300 px-3 py-1 rounded-full text-sm flex items-center"
            >
              <TagIcon className="h-3 w-3 mr-1" />
              {tag}
            </span>
          ))}
        </div>
      </motion.div >


  {/* Related Posts */ }
{
  relatedPosts.length > 0 && (
    <motion.section
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ delay: 0.5 }}
      className="border-t border-gray-800 pt-12 mb-16"
    >
      <h3 className="text-2xl font-bold text-white mb-8">Related Posts</h3>
      <div className="grid md:grid-cols-3 gap-6">
        {relatedPosts.map((relatedPost, index) => (
          <motion.div
            key={relatedPost.id}
            initial={{ opacity: 0, y: 20 }}
            animate={{ opacity: 1, y: 0 }}
            transition={{ delay: 0.6 + index * 0.1 }}
          >
            <Link
              to={`/blog/${relatedPost.id}`}
              className="block bg-gray-800 rounded-xl p-6 hover:bg-gray-700 transition-colors group h-full flex flex-col"
            >
              <div className="aspect-video w-full rounded-lg overflow-hidden mb-4 bg-gray-900">
                {relatedPost.image ? (
                  <img
                    src={relatedPost.image}
                    alt={relatedPost.title}
                    className="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    loading="lazy"
                    width="400"
                    height="225"
                  />
                ) : (
                  <div className="w-full h-full flex items-center justify-center text-4xl">
                    {relatedPost.thumbnail || 'üìù'}
                  </div>
                )}
              </div>
              <h4 className="text-lg font-bold text-white mb-2 group-hover:text-cyan-400 transition-colors line-clamp-2">
                {relatedPost.title}
              </h4>
              <p className="text-gray-400 text-sm mb-3 line-clamp-2 flex-grow">
                {relatedPost.excerpt}
              </p>
              <div className="flex items-center justify-between text-sm text-gray-500 mt-auto">
                <span>{relatedPost.readTime} min read</span>
                <span>{relatedPost.category}</span>
              </div>
            </Link>
          </motion.div>
        ))}
      </div>
    </motion.section>
  )
}

{/* Recommended Assets Interlinking */ }
<section className="border-t border-gray-800 pt-12 mb-12">
  <div className="flex items-center justify-between mb-8">
    <h3 className="text-2xl font-bold text-white">Recommended Tools for This Guide</h3>
    <Link to="/store" className="text-cyan-400 hover:text-cyan-300 flex items-center">
      View All Assets <ShareIcon className="h-4 w-4 ml-2" />
    </Link>
  </div>

  <div className="bg-gradient-to-r from-gray-900 to-gray-800 rounded-2xl p-8 border border-gray-700">
    {shouldPromoteThumbnailEditor(post) ? (
      <div className="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <h4 className="text-xl font-bold text-white mb-4">
            Create Pro Thumbnails for Free
          </h4>
          <p className="text-gray-300 mb-6">
            Apply what you learned! Use our free online Thumbnail Editor to design high-CTR thumbnails without Photoshop.
          </p>
          <Link
            to="/editor"
            className="inline-flex items-center bg-gradient-to-r from-purple-600 to-cyan-600 hover:from-purple-500 hover:to-cyan-500 text-white px-6 py-3 rounded-lg font-bold transition-all shadow-lg hover:shadow-cyan-500/25"
          >
            Open Thumbnail Maker
          </Link>
        </div>
        <div className="flex justify-center">
          <div className="relative w-full max-w-xs aspect-video bg-gray-800 rounded-lg border border-gray-600 flex items-center justify-center overflow-hidden group">
            <div className="absolute inset-0 bg-gradient-to-br from-purple-500/20 to-cyan-500/20 group-hover:opacity-100 transition-opacity"></div>
            <span className="text-4xl">üé®</span>
          </div>
        </div>
      </div>
    ) : (
      <div className="grid md:grid-cols-2 gap-8 items-center">
        <div>
          <h4 className="text-xl font-bold text-white mb-4">
            Upgrade Your Editing Workflow
          </h4>
          <p className="text-gray-300 mb-6">
            Stop searching for hours. Get professional assets used by top creators directly from our store.
          </p>
          <div className="space-y-4">
            {getRecommendedAssetsForPost(post, mockAssets, 2).map(asset => (
              <Link
                key={asset.id}
                to={`/asset/${asset.id}`}
                className="block bg-gray-800 hover:bg-gray-700 p-3 rounded-lg border border-gray-600 transition-colors flex items-center gap-3"
              >
                <div className="text-2xl">{asset.thumbnail && !asset.thumbnail.startsWith('/') ? asset.thumbnail : 'üì¶'}</div>
                <div>
                  <div className="text-white font-semibold">{asset.title}</div>
                  <div className="text-xs text-gray-400">{asset.category}</div>
                </div>
              </Link>
            ))}
          </div>
        </div>
        <div className="flex justify-center flex-col gap-4">
          <Link to="/store" className="bg-gray-800 p-6 rounded-xl border border-gray-600 hover:border-cyan-500 transition-colors text-center group">
            <div className="text-4xl mb-4 group-hover:scale-110 transition-transform duration-300">üöÄ</div>
            <div className="font-bold text-lg text-white mb-1">Browse Full Store</div>
            <div className="text-sm text-gray-400">Transitions, Music, & More</div>
          </Link>
        </div>
      </div>
    )}
  </div>
</section>
    </div >
      </article >
    </>
  );
};

export default BlogPost;